<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fenshi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp35"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="@dimen/line_msg_text_size" />

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="@dimen/line_msg_text_size"
            android:visibility="visible" />


        <TextView
            android:id="@+id/averagePrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="@dimen/line_msg_text_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="@dimen/line_msg_text_size"
            android:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="686">

            <com.mex.GalaxyChain.mychart.view.FenshiView
                android:id="@+id/cff_fenshiview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.mex.GalaxyChain.mychart.view.CrossView
                android:id="@+id/cff_cross"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/achart_frag_bottom" />
</LinearLayout>