<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp35"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/kai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="@dimen/line_msg_text_size" />


            <TextView
                android:id="@+id/gao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="@dimen/line_msg_text_size" />

            <TextView
                android:id="@+id/fu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="@dimen/line_msg_text_size" />

            <TextView
                android:id="@+id/chengjiao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="@dimen/line_msg_text_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="@dimen/line_msg_text_size" />


            <TextView
                android:id="@+id/di"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="@dimen/line_msg_text_size" />

            <TextView
                android:id="@+id/e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="@dimen/line_msg_text_size" />

            <TextView
                android:id="@+id/junjia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="#000"
                android:textSize="@dimen/line_msg_text_size" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="#e7e4e4" />

    <LinearLayout
        android:id="@+id/ll_Ma"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp20"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/sma5"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="MA5：--"
            android:textColor="#ffbb40"
            android:textSize="@dimen/line_msg_text_size" />

        <TextView
            android:id="@+id/sma10"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:text="MA10：--"
            android:textColor="#46d1ff"
            android:textSize="@dimen/line_msg_text_size" />

        <TextView
            android:id="@+id/sma20"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center_vertical"
            android:text="MA20：--"
            android:textColor="#fb45ff"
            android:textSize="@dimen/line_msg_text_size" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <com.mex.GalaxyChain.mychart.view.KLineView
            android:id="@+id/ckf_klineview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.mex.GalaxyChain.mychart.view.CrossView
            android:id="@+id/cff_cross"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/achart_frag_bottom" />
</LinearLayout>