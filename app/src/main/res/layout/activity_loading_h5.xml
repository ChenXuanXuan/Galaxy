<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/rgb_221_223_228"
         android:orientation="vertical"
              android:id="@+id/rootView">


    <ProgressBar
        android:id="@+id/refresh_list_footer_progressbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/logo_loading" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp24"
        android:text="正在为您跳转到"
        android:layout_gravity="center"
        android:textColor="@color/light_bule">
     </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp3"
        android:textColor="@color/light_bule"
        android:text="第三方平台以数字货币的方式进行充值">
    </TextView>

</LinearLayout>
