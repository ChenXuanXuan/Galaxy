<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include layout="@layout/layout_topbar" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/topBar"
        android:background="@color/line_color">

        <TextView
            android:id="@+id/tv_withDraw_checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="提现审核"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/sp15" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="提现成功后可在法币账户中进行卖出"
            android:layout_marginTop="@dimen/dp8"
            android:layout_below="@+id/tv_withDraw_checking"
            android:textColor="@color/light_bule"
            android:textSize="@dimen/sp12" />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl_des"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_below="@+id/rl"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="交易账户  转到  法币账户"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/sp15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="代币账户"
            android:textColor="#555555"
            android:textSize="@dimen/sp15"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_below="@+id/rl_des"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_des1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_below="@+id/view"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提现数量"
            android:textColor="#b9b9b9"
            android:textSize="@dimen/dp15" />

        <TextView
            android:id="@+id/tv_drawed_YYCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0YY"
            android:textColor="#555555"
            android:textSize="@dimen/dp15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_below="@+id/rl_des1"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp15"
        android:background="@drawable/code_bg"
        android:gravity="center"
        android:text="确 认"
        android:textColor="@color/white" />

</RelativeLayout>