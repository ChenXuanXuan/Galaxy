<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_layout_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/btn_bg_gray_pressed"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp30"
                android:src="@drawable/icon_user" />

            <TextView
                android:id="@+id/tv_amount_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_user_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:text="总金额(--)" />

            <TextView
                android:id="@+id/tv_canusedamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_amount_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp10"
                android:text="0"
                android:textSize="@dimen/dp18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_canusedamount"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15">

                <TextView
                    android:id="@+id/inpour"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp35"
                    android:layout_weight="1"
                    android:background="@drawable/code_bg"
                    android:gravity="center"
                    android:text="充值"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/withDraw"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp35"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_weight="1"
                    android:background="@drawable/code_bg"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_getMoneyFlow"
            style="@style/MineView">

            <TextView
                style="@style/MineTV"
                android:text="资金明细" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <View style="@style/ViewLine" />

        <RelativeLayout
            android:id="@+id/assetCenter"
            style="@style/MineView">

            <TextView
                style="@style/MineTV"
                android:text="账户中心" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <View style="@style/ViewLine" />

        <RelativeLayout style="@style/MineView">

            <TextView
                style="@style/MineTV"
                android:text="消息提醒" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <View style="@style/ViewLine" />

        <RelativeLayout
            android:id="@+id/normalQa"
            style="@style/MineView">

            <TextView
                style="@style/MineTV"
                android:text="常见问题" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <View style="@style/ViewLine" />

        <RelativeLayout
            android:id="@+id/about_us"
            style="@style/MineView">

            <TextView
                style="@style/MineTV"
                android:text="关于我们" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <View style="@style/ViewLine" />

        <RelativeLayout
            android:id="@+id/setting"
            style="@style/MineView">

            <TextView
                style="@style/MineTV"
                android:text="设置" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <View style="@style/ViewLine" />

    </LinearLayout>

</ScrollView>