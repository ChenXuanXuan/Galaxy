<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/variety_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tv_trade_satus"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_toRightOf="@+id/variety_name"
                    android:background="@drawable/btn_bg_gray_shape"
                    android:text="--"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/sub_symbol_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/variety_name"
                    android:layout_marginTop="@dimen/dp3"
                    android:text="--"
                    android:textColor="@color/light_gray"
                     />


            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_mostNew_price"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@color/font_gray_normal">

        </TextView>


        <TextView
            android:id="@+id/tv_24hoursTrade"
            android:layout_width="@dimen/dp80"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@color/font_gray_normal">

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:background="@color/rgb_216_216_216" />


    </LinearLayout>


</LinearLayout>