<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/symbolName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp24"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp5"
        android:text="美元油"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp14"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp20"
        android:layout_marginTop="@dimen/dp3"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:text="扣除交易费用"
            android:textColor="@color/rgb_54_54_54"
            android:textSize="@dimen/sp12"/>

        <TextView
            android:id="@+id/tv_tradeFee"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="end"
             android:layout_gravity="center_vertical"
            android:text="-100"
            android:textColor="@color/rgb_54_54_54"
            android:textSize="@dimen/sp12"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp20"
        android:layout_marginTop="@dimen/dp3"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:singleLine="true"
            android:text="冻结保证金"
            android:textColor="@color/rgb_54_54_54"
            android:textSize="@dimen/sp12"/>

        <TextView
            android:id="@+id/tv_margin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:text="10000"
            android:textColor="@color/rgb_54_54_54"
            android:textSize="@dimen/sp12"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp3"
        android:layout_height="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginRight="@dimen/dp24">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="2018-05-20"
            android:textColor="@color/rgb_54_54_54"
            android:textSize="@dimen/sp12"></TextView>

        <TextView
            android:id="@+id/tv_canuseAmount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="100000"
            android:textColor="@color/rgb_54_54_54"
            android:textSize="@dimen/sp12"></TextView>

    </RelativeLayout>


    <View
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/rgb_216_216_216" />


</LinearLayout>
