<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/light_bule"
    android:visibility="visible">


    <RelativeLayout
        android:id="@+id/tv_top_bar_left"
        android:layout_width="@dimen/dp50"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_top_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:padding="@dimen/dp12"
            android:paddingLeft="@dimen/dp15"
            android:src="@drawable/back" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_top_bar_middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp15"
        android:gravity="center|bottom"
        android:singleLine="true"
        android:text="--"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp18" />

    <TextView
        android:id="@+id/tv_top_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center_vertical"

        android:text="---"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp18"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/iv_top_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/iv_top_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:padding="@dimen/dp12" />

    </RelativeLayout>
</RelativeLayout>